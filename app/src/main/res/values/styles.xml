<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#ffcc00</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#008060</item>
    </style>

    <style name="TeamNameStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/smallFont</item>
    </style>

    <style name="PointsCounterStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/bigFont</item>
    </style>

    <style name="SetsCounterStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/normalFont</item>
    </style>

    <style name="ButtonStyle">
         <item name="android:textColor">@color/white</item>
     </style>

    <style name="MiddleScreenStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normalFont</item>
    </style>
</resources>